<!DOCTYPE html>
<html>
<head>
    <meta charset="gb2312">
    <title>CH博客</title>
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <script type="text/javascript" src="~/js/jquery-1.9.1.min.js"></script>
    <script type="text/javascript" src="~/js/sliders.js"></script>
    <script src="~/js/tool.js"></script>
    <link href="~/css/base.css" rel="stylesheet">
    <link href="~/css/index.css" rel="stylesheet">
    <script src="~/js/TabInfo.js"></script>
    <script src="~/js/Home.js"></script>
    <style>
        html {
            height: 100%;
        }

        body {
            min-height: 100%;
            margin: 0;
            padding: 0;
            position: relative;
        }

        footer {
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
<body>
    <div>
        <header>
            <div class="logo f_l"> <a href="/"><img src="~/images/logo4.png" style="border:0;height:80px;width:120px"></a><span id="user"> <a style="cursor:pointer" href="../BlogAdmin/Login">[登陆</a>&nbsp;&nbsp;<a style="cursor:pointer" href="../BlogAdmin/Registor">注册]</a></span> </div>
            <nav id="topnav" class="f_r" style="width:75%">
      
            </nav>
        </header>
        <div style="margin-bottom:10px">
            <article>
                <div class="l_box f_l">
                    <div class="topnews">
                        <div id="Content">
                            @RenderBody()
                        </div>
                    </div>
                </div>
                <div class="r_box f_r">
                    <div class="moreSelect" id="lp_right_select">
                        <script>
                            window.onload = function () {
                                var oLi = document.getElementById("tab").getElementsByTagName("li");
                                var oUl = document.getElementById("ms-main").getElementsByTagName("div");
                                for (var i = 0; i < oLi.length; i++) {
                                    oLi[i].index = i;
                                    oLi[i].onmouseover = function () {
                                        for (var n = 0; n < oLi.length; n++) oLi[n].className = "";
                                        this.className = "cur";
                                        for (var n = 0; n < oUl.length; n++) oUl[n].style.display = "none";
                                        oUl[this.index].style.display = "block"
                                    }
                                }
                            }
                        </script>
                        <div class="ms-top">
                            <ul class="hd" id="tab">
                                <li class="cur"><a href="/" class="cur">点击排行</a></li>
                                <li><a href="/">最新文章</a></li>
                                <li><a href="/">站长推荐</a></li>
                            </ul>
                        </div>
                        <div class="ms-main" id="ms-main">
                            <div style="display: block;" class="bd bd-news" id="TopBrow">
                                <ul>
                                   
                                </ul>
                            </div>
                            <div class="bd bd-news" id="TopNew">
                                <ul>
                            
                                </ul>
                            </div>
                            <div class="bd bd-news" id="TopFirst">
                                <ul>
                                
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="links" style="padding-bottom:400px;">
                        <h3><span></span>友情链接</h3>
                        <ul>
                            <li><a href="/">某某博客</a></li>
                            <li><a href="/">友情链接一</a></li>
                            <li><a href="/">前端设计</a></li>
                            <li><a href="/">Html</a></li>
                            <li><a href="/">友情链接二</a></li>
                            <li><a href="/">CSS3</a></li>
                            <li><a href="/">百度</a></li>
                        </ul>
                    </div>
                </div>
            </article>
        </div>

        <div style="left:0;bottom:0;margin-top:20px">
            <footer>
                <p class="ft-copyright">CH博客 copyright@2017</p>
                <div id="tbox"> <a id="togbook" href="/"></a> <a id="gotop" href="javascript:void(0)"></a> </div>
            </footer>
        </div>
    </div>
</body>
</html>
