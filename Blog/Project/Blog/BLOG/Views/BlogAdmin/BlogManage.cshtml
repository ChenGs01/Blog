    Layout = "~/Views/Shared/BlogAdminLayout.cshtml";
}
<style>
    .aclass {
        color: blue;
        text-decoration: underline;
    }
</style>
<link rel="stylesheet" href="~/css/main.css">
<script src="~/lib/layer/layer.js"></script>
<script src="~/js/jquerySession.js"></script>
